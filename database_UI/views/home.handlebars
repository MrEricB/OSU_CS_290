<h1>Add an Exercise</h1>

<form class="add-form">
  <fieldset>
    <div>
      <label for="date">Date: </label>
      <input id="add_date" type="date" name="date">
    </div>
    <div>
      <label for="name">Exercise Name: </label>
      <input id="add_name" type="text" name="name">
    </div>
    <div>
      <label for="reps"># of Reps: </label>
      <input id="add_reps" type="number" name="reps" min="0">
    </div>
    <div>
      <label for="weight">Weight Amount: </label>
      <input id="add_weight" type="number" name="weight" min="0">
    </div>
    <div>
      <label for="unit">Units: </label>
      <input id="add_unit" type="radio" name="unit" value="1" checked>lbs
      <input type="radio" name="unit" value="0">kgs
    </div>
    <input id="addExercise" type="submit" value="Add">
  </fieldset>
</form>


<h3>Your finished Exercises</h3>
